# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Database Configuration
# Railway will provide DATABASE_URL automatically when you provision PostgreSQL
# If DATABASE_URL is not available, these individual vars will be used:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barkpark
DB_USER=postgres
DB_PASSWORD=your_password

# AWS S3 Configuration for Image Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=barkpark-images

# CORS Configuration (optional)
# CORS_ORIGIN=https://your-frontend-domain.com

# Optional: Sentry for Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (for password reset)
# For production, use your SMTP provider (SendGrid, Mailgun, etc.)
# For development, leave these empty to use Ethereal Email test service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@barkpark.app

# Application URL (used in password reset emails)
APP_URL=https://barkpark.app