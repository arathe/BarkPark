# BarkPark Backend Environment Configuration
# Copy this file to .env and update with your values

# Environment Configuration
NODE_ENV=development  # Options: development, staging, production
PORT=3000

# Database Configuration
# Option 1: Use DATABASE_URL (Railway/Heroku will provide this)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barkpark
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Admin Access
ADMIN_KEY=your_admin_key_for_protected_endpoints

# AWS S3 Configuration (REQUIRED for photo uploads)
# Without these, all photo upload features will fail
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=barkpark-images

# Email Configuration (for password reset)
# Option 1: Leave empty for Ethereal Email (test service - dev only)
# Option 2: Configure SMTP for real emails (staging/production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@barkpark.app

# Application URL (used in password reset emails)
# Must match your deployment URL
APP_URL=http://localhost:3000

# Optional Configuration
# CORS_ORIGIN=https://your-frontend-domain.com
# SENTRY_DSN=your_sentry_dsn_here

# Railway-specific (automatically set in Railway)
# RAILWAY_ENVIRONMENT=staging