# Staging Environment Configuration
# Copy this to .env.staging and update with your staging values

# Server Configuration
NODE_ENV=staging
PORT=3001

# Database Configuration (Railway Staging Instance)
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=your-staging-db.railway.app
DB_PORT=5432
DB_NAME=barkpark_staging
DB_USER=staging_user
DB_PASSWORD=your_staging_password

# Authentication
JWT_SECRET=your-staging-jwt-secret-at-least-32-chars
JWT_EXPIRES_IN=7d

# AWS S3 Configuration (Use separate bucket for staging)
AWS_ACCESS_KEY_ID=your-staging-aws-access-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=barkpark-staging

# Admin Configuration
ADMIN_KEY=your-staging-admin-key

# Feature Flags (for testing new features)
ENABLE_WEBSOCKETS=false
ENABLE_PUSH_NOTIFICATIONS=false
DEBUG_MODE=true

# External Services
SENTRY_DSN=your-staging-sentry-dsn
LOG_LEVEL=debug